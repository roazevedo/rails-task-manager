<div class="container">
  <div class="mt-3">
    <%= form_with model: @tasks do |f| %>
      <%= f.label :title %>
      <br>
      <%= f.text_field :title, size: "70x1" %>
      <br>
      <%= f.label :details %>
      <br>
      <%= f.text_area :details, size: "73x5" %>
      <br>
      <%= f.submit %>
      <br>
  </div>
  <%= link_to "Back to your list", tasks_path %>
</div>
